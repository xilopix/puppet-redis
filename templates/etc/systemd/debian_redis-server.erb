[Unit]
Description=Advanced key-value store
After=network.target

[Service]
Type=forking
ExecStart=<%= @redis_install_dir %>/redis-server /etc/redis/redis_<%= @redis_name %>.conf
ExecStop=/usr/bin/redis-cli -h <%= @redis_ip %> -p <%= @redis_port %> shutdown
Restart=always
User=redis
Group=redis
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
